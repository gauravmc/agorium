<% provide(:title, @brand.name) %>

<div class="content">
  <h1 class="title is-1"><%= @brand.name %></h1>
  <p class="subtitle">Brand tagline</p>
</div>

<div class="tabs is-hidden-tablet">
  <ul>
    <li class="<%= 'is-active' if controller_name == 'storefront' %>">
      <%= link_to storefront_path(@brand.handle) do %>
        <span class="icon"><i class="fas fa-tags" aria-hidden="true"></i></span>
        <span>Products</span>
      <% end %>
    </li>
    <li>
      <a>
        <span class="icon"><i class="fas fa-info" aria-hidden="true"></i></span>
        <span>About us</span>
      </a>
    </li>
    <li class="<%= 'is-active' if controller_name == 'cart' %>" style="margin-left: auto;">
      <%= link_to cart_path do %>
        <span class="icon"><i class="fas fa-shopping-cart" aria-hidden="true"></i></span>
        <span><%= @cart.line_items.count %></span>
      <% end %>
    </li>
  </ul>
</div>

<div class="tabs is-medium is-hidden-mobile">
  <ul>
    <li class="<%= 'is-active' if controller_name == 'storefront' %>">
      <%= link_to storefront_path(@brand.handle) do %>
        <span class="icon"><i class="fas fa-tags" aria-hidden="true"></i></span>
        <span>Products</span>
      <% end %>
    </li>
    <li>
      <a>
        <span class="icon"><i class="fas fa-info" aria-hidden="true"></i></span>
        <span>About us</span>
      </a>
    </li>
    <li class="<%= 'is-active' if controller_name == 'cart' %>" style="margin-left: auto;">
      <%= link_to cart_path do %>
        <span class="icon"><i class="fas fa-shopping-cart" aria-hidden="true"></i></span>
        <span><%= @cart.line_items.count %></span>
      <% end %>
    </li>
  </ul>
</div>

<section class="section">
  <% @products.each_slice(3) do |slice| %>
    <div class="tile is-ancestor">
    <% filler_tile_count = 3 - slice.size %>
    <% slice.each do |product| %>
      <div class="tile is-parent is-vertical">
        <article class="tile is-child">
          <figure class="image" style="margin-bottom: 20px !important;">
            <%= image_tag product.photos.sample.variant(resize: "480") %>
          </figure>
          <p class="title is-4"><%= product.name %></p>
          <p><%= product.description.truncate(100) %></p>
        </article>
        <div class="tile is-child">
          <a class="button is-primary is-medium is-outlined">
            <span class="icon">
              <i class="fas fa-cart-plus"></i>
            </span>
            <span>Add to cart</span>
          </a>
        </div>
      </div>
    <% end %>

    <% filler_tile_count.times do %>
      <div class="tile is-parent is-vertical">
        <article class="tile is-child">
        </article>
      </div>
    <% end %>
    </div>
  <% end %>
</section>
