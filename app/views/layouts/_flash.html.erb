<% unless flash.empty? %>
  <section class="hero" data-controller="flash" data-target="flash.section" data-flash-count="<%= flash.count %>">
    <div class="hero-body">
      <div class="container">
        <% flash.each do |key, value| %>
          <div class="notification is-<%= key %>" data-target="flash.notification">
            <button class="delete" data-action="click->flash#remove"></button>
            <%= value %>
          </div>
        <% end %>
      </div>
    </div>
  </section>
<% end %>
