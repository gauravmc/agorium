<% provide(:title, 'Sign up') %>

<section class="section">
  <div class="container">
    <h3 class="title is-3">Create your account</h3>
    <%= form_for(@user, url: signup_path) do |f| %>
      <div class="field">
        <div class="control">
          <%= f.text_field :name, class: "input is-medium #{'is-danger' if @user.errors[:name].any?}", placeholder: 'Name' %>
        </div>
        <% if @user.errors[:name].any? %>
          <% @user.errors[:name].each do |message| %>
            <p class="help is-danger">Name <%= message %></p>
          <% end %>
        <% end %>
      </div>

      <div class="field">
        <div class="control">
          <%= f.phone_field :phone, class: "input is-medium #{'is-danger' if @user.errors[:phone].any?}", placeholder: 'Phone' %>
        </div>
        <% if @user.errors[:phone].any? %>
          <% @user.errors[:phone].each do |message| %>
            <p class="help is-danger">Phone <%= message %></p>
          <% end %>
        <% end %>
      </div>

      <div class="actions">
        <%= f.submit 'Continue', class: 'button is-primary is-medium is-fullwidth' %>
      </div>
    <% end %>
  </div>
</section>
