<div id="flashNotification" class="content">
  <% unless flash.empty? %>
    <% flash.each do |key, value| %>
      <div class="notification is-<%= key %>" data-controller="flash" data-target="flash.notification">
        <button class="delete" data-action="flash#remove"></button>
        <%= value %>
      </div>
    <% end %>
  <% end %>
</div>
